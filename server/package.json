{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Server implementation of the TMS",
  "main": "src/server.ts",
  "license": "MIT",
  "scripts": {
    "build": "tsc -b",
    "postbuild": "copyfiles -E \"config/**/*\" build/",
    "build:watch": "tsc -b -w",
    "start": "ts-node-dev --no-notify . --no-lazy",
    "test": "jest --detectOpenHandles --runInBand",
    "eslint:check": "eslint \"src/**/*.ts?(x)\"",
    "format": "eslint --fix \"src/**/*.ts?(x)\"",
    "prettier:check": "prettier --check \"src/**/*.ts?(x)\"",
    "ts:check": "tsc --project . --noEmit"
  },
  "config": {
    "mongodbMemoryServer": {
      "downloadDir": "../node_modules/.cache/mongodb-memory-server/mongodb-binaries"
    }
  },
  "dependencies": {
    "@hasezoey/typegoose": "^5.9.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.2.3",
    "connect-mongo": "^3.1.0",
    "date-fns-tz": "^1.0.8",
    "excel4node": "^1.7.2",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "express-session": "^1.17.0",
    "js-yaml": "^3.13.1",
    "jszip": "^3.2.2",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.5",
    "mongoose-field-encryption": "^3.0.0",
    "nodemailer": "^6.3.1",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "puppeteer": "1.19.0",
    "reflect-metadata": "^0.1.13",
    "shared": "1.0.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chance": "^1.0.7",
    "@types/config": "^0.0.35",
    "@types/connect-mongo": "^0.0.44",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.15",
    "@types/jest": "^24.0.19",
    "@types/jszip": "^3.1.6",
    "@types/mongoose": "^5.5.22",
    "@types/nodemailer": "^6.2.1",
    "@types/passport": "^1.0.1",
    "@types/passport-http": "^0.3.8",
    "@types/puppeteer": "^1.20.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^3.4.5",
    "chance": "^1.1.3",
    "copyfiles": "^2.1.1",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node-dev": "^1.0.0-pre.42"
  },
  "resolutions": {
    "@types/connect-mongo/@types/express-session": "^1.15.15",
    "@types/connect-mongo/@types/mongoose": "^5.5.21"
  }
}
