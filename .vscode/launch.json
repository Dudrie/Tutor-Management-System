{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Current TS File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client/src"
    },
    {
      "name": "Launch NodeJS server",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": "${cwd}/node_modules/.bin/ts-node-dev",
      "restart": true,
      "args": ["--no-notify", "src/server.ts"],
      "runtimeArgs": ["--nolazy"],
      "protocol": "inspector",
      "console": "integratedTerminal",
      "sourceMaps": true
    },
    {
      "name": "Launch NodeJS server & client",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": "${cwd}/node_modules/.bin/ts-node-dev",
      "restart": true,
      "args": ["--no-notify", "src/server.ts"],
      "runtimeArgs": ["--nolazy"],
      "protocol": "inspector",
      "console": "integratedTerminal",
      "preLaunchTask": "Start Client",
      "sourceMaps": true
    }
  ]
}
