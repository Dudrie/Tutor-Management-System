{
  "private": true,
  "workspaces": [
    "client",
    "server",
    "scripts",
    "shared"
  ],
  "scripts": {
    "postinstall": "yarn build:shared",
    "format": "yarn format:client && yarn format:server && yarn format:shared",
    "format:client": "echo Formatting client && cd ./client && yarn format",
    "format:server": "echo Formatting server && cd ./server && yarn format",
    "format:shared": "echo Formatting shared && cd ./shared && yarn format",
    "build": "yarn build:shared && yarn build:client && yarn build:server && yarn copy:app",
    "build:client": "cd ./client && yarn build",
    "build:server": "cd ./server && yarn build",
    "build:shared": "cd ./shared && yarn build",
    "copy:app": "copyfiles -u 2 -E -V \"client/build/**/*\" server/build/app",
    "docker:build": "yarn docker:image:build && yarn docker:image:tar",
    "docker:image:build": "docker build --tag=tutor-management-system .",
    "docker:image:tar": "docker save -o Tutor-Management-System.tar tutor-management-system"
  },
  "devDependencies": {
    "@types/node": "^12.7.4",
    "@types/yup": "^0.26.23",
    "@typescript-eslint/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^2.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "date-fns": "^2.1.0",
    "yup": "^0.27.0"
  }
}
